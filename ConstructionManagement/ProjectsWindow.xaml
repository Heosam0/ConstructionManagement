<Window x:Class="ConstructionManagement.ProjectsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConstructionManagement"
        mc:Ignorable="d"
        Title="Управление проектами" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="ProjectsDataGrid" AutoGenerateColumns="False"  CanUserAddRows="False" IsReadOnly="True" Margin="10,10,10,35">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto" />
                <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="*" />
                <DataGridTextColumn Header="Описание" Binding="{Binding Description}" Width="*" />
                <DataGridTextColumn Header="Дата начала" Binding="{Binding StartDate, StringFormat={}{0:dd.MM.yyyy}}" Width="Auto" />
                <DataGridTextColumn Header="Дата окончания" Binding="{Binding EndDate, StringFormat={}{0:dd.MM.yyyy}}" Width="Auto" />
                <DataGridComboBoxColumn Header="Заказчик" 
                                SelectedValueBinding="{Binding CustomersId}" 
                                DisplayMemberPath="OrganizationName" 
                                SelectedValuePath="Id" />
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Добавить проект" HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom" Width="120" Click="AddProject_Click"/>
        <Button Content="Редактировать" HorizontalAlignment="Left" Margin="140,0,0,10" Width="120" Click="EditProject_Click" Height="20" VerticalAlignment="Bottom"/>
        <Button Content="Удалить проект" HorizontalAlignment="Left" Margin="270,0,0,10" Width="120" Click="DeleteProject_Click" Height="20" VerticalAlignment="Bottom"/>
    </Grid>
</Window>