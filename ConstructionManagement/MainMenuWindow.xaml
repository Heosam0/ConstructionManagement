<Window x:Class="ConstructionManagement.MainMenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConstructionManagement"
        mc:Ignorable="d"
         Title="Главное меню" Height="450" Width="800"
        MinHeight="350" MinWidth="600">
    <Grid Margin="0,0,0,-6">
        <!-- Верхняя панель с приветствием и кнопкой выхода -->
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Приветствие -->
            <Label x:Name="WelcomeLabel" Content="Добро пожаловать, Елена Смирнова!" 
                   HorizontalAlignment="Left" VerticalAlignment="Top" 
                   FontSize="18" FontWeight="Bold" Margin="0,8,0,0"/>

            <!-- Кнопка выхода -->
            <Button x:Name="LogoutButton" Content="Выйти" Grid.Column="1" 
                    HorizontalAlignment="Center" VerticalAlignment="Top" 
                    Height="30" Width="80" Click="LogoutButton_Click" Margin="0,10,0,0"/>
        </Grid>

        <!-- Основная область с кнопками -->
        <Grid Margin="20,80,20,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Первый ряд кнопок -->
            <Button x:Name="ProjectsButton" Content="Проекты" Grid.Row="0" Grid.Column="0" 
                    Margin="10" Height="40" Click="ProjectsButton_Click"/>
            <Button x:Name="CustomersButton" Content="Клиенты" Grid.Row="0" Grid.Column="1" 
                    Margin="10" Height="40" Click="CustomersButton_Click"/>
            <Button x:Name="SuppliersButton" Content="Поставщики" Grid.Row="0" Grid.Column="2" 
                    Margin="10" Height="40" Click="SuppliersButton_Click"/>

            <!-- Второй ряд кнопок -->
            <Button x:Name="EquipmentButton" Content="Оборудование" Grid.Row="1" Grid.Column="0" 
                    Margin="10" Height="40" Click="EquipmentButton_Click"/>
            <Button x:Name="MaterialsButton" Content="Материалы" Grid.Row="1" Grid.Column="1" 
                    Margin="10" Height="40" Click="MaterialsButton_Click"/>
            <Button x:Name="PaymentsButton" Content="Платежи" Grid.Row="1" Grid.Column="2" 
                    Margin="10" Height="40" Click="PaymentsButton_Click"/>

            <!-- Третий ряд кнопок -->
            <Button x:Name="ContractsButton" Content="Контракты" Grid.Row="2" Grid.Column="0" 
                    Margin="10" Height="40" Click="ContractsButton_Click"/>
            <Button x:Name="TasksButton" Content="Задачи" Grid.Row="2" Grid.Column="1" 
                    Margin="10" Height="40" Click="TasksButton_Click"/>
            <Button x:Name="ReportsButton" Content="Отчеты" Grid.Row="2" Grid.Column="2" 
                    Margin="10" Height="40" Click="ReportsButton_Click"/>
        </Grid>
    </Grid>
</Window>