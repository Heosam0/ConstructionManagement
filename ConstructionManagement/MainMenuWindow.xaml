<Window x:Class="ConstructionManagement.MainMenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        xmlns:local="clr-namespace:ConstructionManagement"
        mc:Ignorable="d"
        Title="Панель управления" 
        Height="720" Width="1280"
        MinHeight="600" MinWidth="1024"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        FontFamily="{materialDesign:MaterialDesignFont}">

    <Window.Resources>
        <!-- Стиль для кнопок навигации -->
        <Style x:Key="NavButton" 
       TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#FF545353"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                    VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#22FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#44FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- Стиль для графиков -->
        <Style TargetType="lvc:CartesianChart">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
        </Style>

        <!-- Стиль для списка задач -->
        <Style x:Key="TaskItemStyle" TargetType="ListViewItem">
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Левая панель навигации -->
        <materialDesign:Card Grid.Column="0" Background="{DynamicResource PrimaryHueMidBrush}" Padding="0">
            <DockPanel>
                <!-- Профиль пользователя -->
                <StackPanel DockPanel.Dock="Top" Margin="16">
                    <materialDesign:PackIcon Kind="AccountCircle" 
                                           Height="64" Width="64" 
                                           HorizontalAlignment="Center"
                                           Foreground="{DynamicResource PrimaryHueMidForegroundBrush}"/>
                    <TextBlock x:Name="UserNameText" 
                             Text="Имя пользователя"
                             HorizontalAlignment="Center"
                             FontSize="18"
                             Margin="0,8,0,0"
                             Foreground="{DynamicResource PrimaryHueMidForegroundBrush}"/>
                    <TextBlock x:Name="UserRoleText"
                             Text="Должность"
                             HorizontalAlignment="Center"
                             Opacity="0.7"
                             Margin="0,4,0,0"
                             Foreground="{DynamicResource PrimaryHueMidForegroundBrush}"/>
                </StackPanel>

                <!-- Навигационное меню -->
                <StackPanel DockPanel.Dock="Top">
                    <Button Style="{StaticResource NavButton}" Click="ProjectsButton_Click">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ViewDashboard" Margin="0,0,8,0"/>
                            <TextBlock Text="Обзор"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource NavButton}" Click="ProjectsButton_Click">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Construction" Margin="0,0,8,0"/>
                            <TextBlock Text="Проекты"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource NavButton}" Click="TasksButton_Click">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ClipboardCheckOutline" Margin="0,0,8,0"/>
                            <TextBlock Text="Задачи"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource NavButton}" Click="MaterialsButton_Click">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Package" Margin="0,0,8,0"/>
                            <TextBlock Text="Материалы"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource NavButton}" Click="EquipmentButton_Click">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Tools" Margin="0,0,8,0"/>
                            <TextBlock Text="Оборудование"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource NavButton}" Click="PaymentsButton_Click">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="CurrencyUsd" Margin="0,0,8,0"/>
                            <TextBlock Text="Финансы"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- Кнопка выхода внизу -->
                <Button Style="{StaticResource NavButton}" 
                        Click="LogoutButton_Click"
                        DockPanel.Dock="Bottom"
                        Margin="8,16">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Logout" Margin="0,0,8,0"/>
                        <TextBlock Text="Выйти"/>
                    </StackPanel>
                </Button>
            </DockPanel>
        </materialDesign:Card>

        <!-- Основная область контента -->
        <ScrollViewer Grid.Column="1" Margin="16">
            
            <StackPanel>
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Верхняя панель с заголовком и кнопкой обновления -->
                    <DockPanel Grid.Row="0" Margin="16,16,16,0">
                        <Button DockPanel.Dock="Right" 
                Click="RefreshButton_Click"
                Style="{StaticResource MaterialDesignIconButton}">
                            <materialDesign:PackIcon Kind="Refresh" 
                                   Width="24" 
                                   Height="24"/>
                        </Button>
                        <TextBlock Text="Панель управления" 
                  Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                  VerticalAlignment="Center"/>
                    </DockPanel>

                  
                </Grid>
                <!-- Верхние карточки -->
                <Grid Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Активные проекты -->
                    <materialDesign:Card Grid.Column="0" Margin="8" Padding="16">
                        <StackPanel>
                            <DockPanel>
                                <materialDesign:PackIcon Kind="Construction" 
                                                       Width="24" Height="24"
                                                       VerticalAlignment="Center"/>
                                <TextBlock Text="Активные проекты"
                                         Margin="8,0,0,0"
                                         Style="{StaticResource MaterialDesignBody1TextBlock}"/>
                            </DockPanel>
                            <TextBlock x:Name="txtActiveProjectsCount"
                                     Text="0"
                                     FontSize="34"
                                     FontWeight="Bold"
                                     Margin="0,8,0,0"/>
                        </StackPanel>
                    </materialDesign:Card>

                    <!-- Текущие задачи -->
                    <materialDesign:Card Grid.Column="1" Margin="8" Padding="16">
                        <StackPanel>
                            <DockPanel>
                                <materialDesign:PackIcon Kind="ClipboardCheck" 
                                                       Width="24" Height="24"
                                                       VerticalAlignment="Center"/>
                                <TextBlock Text="Текущие задачи"
                                         Margin="8,0,0,0"
                                         Style="{StaticResource MaterialDesignBody1TextBlock}"/>
                            </DockPanel>
                            <TextBlock x:Name="txtTasksCount"
                                     Text="0"
                                     FontSize="34"
                                     FontWeight="Bold"
                                     Margin="0,8,0,0"/>
                        </StackPanel>
                    </materialDesign:Card>

                    <!-- Расходы за месяц -->
                    <materialDesign:Card Grid.Column="2" Margin="8" Padding="16">
                        <StackPanel>
                            <DockPanel>
                                <materialDesign:PackIcon Kind="CurrencyUsd" 
                                                       Width="24" Height="24"
                                                       VerticalAlignment="Center"/>
                                <TextBlock Text="Расходы за месяц"
                                         Margin="8,0,0,0"
                                         Style="{StaticResource MaterialDesignBody1TextBlock}"/>
                            </DockPanel>
                            <TextBlock x:Name="txtMonthlyExpenses"
                                     Text="0 ₽"
                                     FontSize="34"
                                     FontWeight="Bold"
                                     Margin="0,8,0,0"/>
                        </StackPanel>
                    </materialDesign:Card>

                    <!-- Выполнено проектов -->
                    <materialDesign:Card Grid.Column="3" Margin="8" Padding="16">
                        <StackPanel>
                            <DockPanel>
                                <materialDesign:PackIcon Kind="CheckCircle" 
                                                       Width="24" Height="24"
                                                       VerticalAlignment="Center"/>
                                <TextBlock Text="Выполнено проектов"
                                         Margin="8,0,0,0"
                                         Style="{StaticResource MaterialDesignBody1TextBlock}"/>
                            </DockPanel>
                            <TextBlock x:Name="txtCompletedProjectsCount"
                                     Text="0"
                                     FontSize="34"
                                     FontWeight="Bold"
                                     Margin="0,8,0,0"/>
                        </StackPanel>
                    </materialDesign:Card>
                </Grid>
                
                <!-- Графики и таблицы -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- График выполнения проектов -->
                    <materialDesign:Card Grid.Column="0" Margin="8" Padding="16">
                        <StackPanel>
                            <TextBlock Text="Выполнение проектов"
                                     Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                     Margin="0,0,0,16"/>
                            <lvc:CartesianChart x:Name="chartProjectProgress" 
                                              Height="250"
                                              Series="{Binding ProjectSeries}">
                                <lvc:CartesianChart.AxisY>
                                    <lvc:Axis Title="Процент выполнения" 
                                             LabelFormatter="{Binding PercentFormatter}"/>
                                </lvc:CartesianChart.AxisY>
                            </lvc:CartesianChart>
                        </StackPanel>
                    </materialDesign:Card>

                    <!-- График доходов -->
                    <materialDesign:Card Grid.Column="1" Margin="8" Padding="16">
                        <StackPanel>
                            <TextBlock Text="Доходы за месяц"
                                     Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                     Margin="0,0,0,16"/>
                            <lvc:CartesianChart x:Name="chartRevenue" 
                                              Height="250"
                                              Series="{Binding RevenueSeries}">
                                <lvc:CartesianChart.AxisY>
                                    <lvc:Axis Title="Сумма (₽)" 
                                             LabelFormatter="{Binding CurrencyFormatter}"/>
                                </lvc:CartesianChart.AxisY>
                            </lvc:CartesianChart>
                        </StackPanel>
                    </materialDesign:Card>
                </Grid>

                <!-- Список задач -->
                <materialDesign:Card Margin="8,16" Padding="16">
                    <StackPanel>
                        <TextBlock Text="Последние задачи"
                                 Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                 Margin="0,0,0,16"/>
                        <ListView x:Name="lvTasks" MaxHeight="200">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <DockPanel Margin="0,4">
                                        <materialDesign:PackIcon Kind="{Binding StatusIcon}" 
                                                               Margin="0,0,8,0"
                                                               VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding DueDate, StringFormat='{}{0:dd.MM HH:mm}'}"
                                                 DockPanel.Dock="Right"
                                                 Margin="8,0,0,0"/>
                                        <TextBlock Text="{Binding Description}"
                                                 TextTrimming="CharacterEllipsis"/>
                                    </DockPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </materialDesign:Card>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>