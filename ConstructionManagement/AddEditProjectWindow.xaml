<Window x:Class="ConstructionManagement.AddEditProjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConstructionManagement"
        mc:Ignorable="d"
       Title="{Binding WindowTitle}" Height="398" Width="415"
        ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Название проекта -->
        <Label Content="Название проекта:" Grid.Row="0" />
        <TextBox x:Name="NameTextBox" Grid.Row="1" Text="{Binding Project.Name, UpdateSourceTrigger=PropertyChanged}" />

        <!-- Описание проекта -->
        <Label Content="Описание проекта:" Grid.Row="2" />
        <TextBox x:Name="DescriptionTextBox" Grid.Row="3" Text="{Binding Project.Description, UpdateSourceTrigger=PropertyChanged}" />

        <!-- Дата начала -->
        <Label Content="Дата начала:" Grid.Row="4" />
        <DatePicker x:Name="StartDatePicker" Grid.Row="5" SelectedDate="{Binding Project.StartDate, UpdateSourceTrigger=PropertyChanged}" Height="27" VerticalAlignment="Top" />

        <!-- Дата окончания -->
        <Label Content="Дата окончания:" Grid.Row="5" Margin="0,32,0,0" Height="30" VerticalAlignment="Top" />
        <DatePicker x:Name="EndDatePicker" Grid.Row="5" SelectedDate="{Binding Project.EndDate, UpdateSourceTrigger=PropertyChanged}" Margin="0,62,0,0" Height="23" VerticalAlignment="Top" />

        <Label Content="Заказчик:" Grid.Row="5" Margin="0,87,0,0" Height="30" VerticalAlignment="Top" />
        <ComboBox x:Name="CustomerComboBox" Grid.Row="5"
                  DisplayMemberPath="OrganizationName"
                  SelectedValuePath="Id"
                  SelectedValue="{Binding Project.CustomersId, UpdateSourceTrigger=PropertyChanged}" Margin="0,117,0,0" Height="25" VerticalAlignment="Top" />
        <!-- Кнопки -->
        <StackPanel Grid.Row="8" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Сохранить" Width="115" Margin="0,0,10,0" Click="SaveButton_Click" />
            <Button Content="Отмена" Width="85" Click="CancelButton_Click" />
        </StackPanel>
    </Grid>
</Window>
