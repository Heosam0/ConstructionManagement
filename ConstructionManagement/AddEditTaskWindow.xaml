<Window x:Class="ConstructionManagement.AddEditTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConstructionManagement"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" Height="443" Width="481"
        ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Описание -->
        <Label Content="Описание:" Grid.Row="0" />
        <TextBox x:Name="DescriptionTextBox" Grid.Row="1" Text="{Binding Task.Description, UpdateSourceTrigger=PropertyChanged}" />

        <!-- Статус -->
        <Label Content="Статус:" Grid.Row="2" />
        <ComboBox x:Name="StatusComboBox" Grid.Row="3"
                  SelectedValue="{Binding Task.Status, UpdateSourceTrigger=PropertyChanged}">

        </ComboBox>

        <!-- Дата начала -->
        <Label Content="Дата начала:" Grid.Row="4" />
        <DatePicker x:Name="StartDatePicker" Grid.Row="5" SelectedDate="{Binding Task.StartDate, UpdateSourceTrigger=PropertyChanged}" />

        <!-- Дата окончания -->
        <Label Content="Дата окончания:" Grid.Row="6" />
        <DatePicker x:Name="EndDatePicker" Grid.Row="7" SelectedDate="{Binding Task.EndDate, UpdateSourceTrigger=PropertyChanged}" Height="28" VerticalAlignment="Top" />

        <!-- Проект -->
        <Label Content="Проект:" Grid.Row="7" Margin="0,88,0,0" Height="25" VerticalAlignment="Top" />
        <ComboBox x:Name="ProjectComboBox" Grid.Row="7"
                  DisplayMemberPath="Name"
                  SelectedValuePath="Id"
                  SelectedValue="{Binding Task.ProjectId, UpdateSourceTrigger=PropertyChanged}" Margin="0,113,0,0" Height="30" VerticalAlignment="Top" />

        <!-- Сотрудник -->
        <Label Content="Сотрудник:" Grid.Row="7" Margin="0,28,0,0" Height="30" VerticalAlignment="Top" />
        <ComboBox x:Name="EmployeeComboBox" Grid.Row="7"
                  DisplayMemberPath="LastName"
                  SelectedValuePath="Id"
                  SelectedValue="{Binding Task.EmployeeId, UpdateSourceTrigger=PropertyChanged}" Margin="0,53,0,0" Height="30" VerticalAlignment="Top" />

        <!-- Кнопки -->
        <StackPanel Grid.Row="12" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Сохранить" Width="130" Margin="0,0,10,0" Click="SaveButton_Click" />
            <Button Content="Отмена" Width="85" Click="CancelButton_Click" />
        </StackPanel>
    </Grid>
</Window>